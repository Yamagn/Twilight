<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Twilight.Pages.TweetPage"
             Title="ツイート">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="tweetButton" Text="ツイート" Clicked="Tweet_Clicked"/>
        <ToolbarItem x:Name="mediaButton" Text="メディア" Clicked="Media_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Editor x:Name="tweetContent" Placeholder="いまなにしてる？" IsEnabled="True" AutoSize="TextChanges" HorizontalOptions="Fill" VerticalOptions="Fill"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>